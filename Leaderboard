import java.io.*;
import java.util.Scanner;


public class Leaderboard {
	
	public static void outputLeaderboard() {
		
		String path = "C:\\Users\\Josh\\Desktop\\leaderboard\\leaderboard.txt";
		
		BufferedReader br = null;
		String line;
		
		try { 
			br = new BufferedReader(new FileReader(path));
		} catch (FileNotFoundException fnfex){
			System.out.println("The file could not be found.");
			System.exit(0);
		}
		try { //This will output each line from the requested txt file. 
			while ((line = br.readLine()) != null) {
				System.out.println(line);
			}
		} catch (IOException ioex) {
			System.out.println("Error reading file");
			System.exit(0);
		} 
		
	}
	
	
	public static void updateLeaderboard(int score) throws IOException {
		
		Scanner input = new Scanner(System.in); //Scanner isn't needed once we actually have values to input. For test purposes only!
		String path = "C:\\Users\\Josh\\Desktop\\leaderboard\\leaderboard.txt";
		boolean append_to_file = false;
		
		int [] scores = new int [10]; //Stores the score values, but it needs to be properly congifured with a score from the program
		
		FileWriter write = new FileWriter(path, append_to_file);
		PrintWriter print_line = new PrintWriter(write);
		
		//This loop will print the array to the text file, with a new line for each value.
		for (int i = 0; i < 10; i++){
			System.out.print("Please input the next value.\t");
			scores[i] = input.nextInt();
			print_line.printf("%s" + "%n",scores[i]);
		}
		print_line.close();
		
	}
}
