	}
	
	public static void runMainMenu(){
		
		String [] menu_options = new String[8]; 
		String user_input;
		
		//Program option 1
		menu_options[0] = "training";
		menu_options[1] = "1";
		
		//Program option 2
		menu_options[2] = "survival";
		menu_options[3] = "2";
		
		//Program option 3
		menu_options[4] = "leaderboard";
		menu_options[5] = "3";
		
		//Program option 4
		menu_options[6] = "quit";
		menu_options[7] = "4";

		System.out.println("\nHow would you like to proceed?"
				+ "\n1 - Training"
				+ "\n2 - Survival"
				+ "\n3 - Leaderboard"
				+ "\n4 - Quit");
		user_input = runInputLoop(menu_options);
		
		switch(user_input) {
		
			case "training" : 
				runTrainingMenu();
				break;
			case "1" :
				runTrainingMenu();
				break;
				
			case "survival" :
				runSurvival();
				break;
			case "2" : 
				runSurvival();
				break;
				
			case "leaderboard" :
				runLeaderboard();
				break;
			case "3" :
				runLeaderboard();
				break;
				
			case "quit" :
				runQuit();
			case "4" :
				runQuit();
		
		}
	}
	
	public static void runTrainingMenu() {
		
