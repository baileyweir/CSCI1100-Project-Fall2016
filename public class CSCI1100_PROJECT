		menu_options[4] = "multiplication";
		menu_options[5] = "3";
				
		//Program option 4 - division
		menu_options[6] = "division";
		menu_options[7] = "4";
		
		//Program option 5 - main menu
		menu_options[8] = "main menu";
		menu_options[9] = "5";
		
		System.out.println("\nTraining successfully opened. Which level would you like to play?"
				+ "\n1 - Addition"
				+ "\n2 - Subtraction"
				+ "\n3 - Multiplication"
				+ "\n4 - Division"
				+ "\n5 - Main Menu");
		user_input = runInputLoop(menu_options);
		
		switch (user_input){
			
			case "addition" :
				//runAdditionMenu();
				System.out.println("Returning to main menu... (addition)");
				runMainMenu();
			case "1" :
				//runAdditionMenu
				System.out.println("Returning to main menu... (addition)");
				runMainMenu();
				
			case "subtraction" :
				//runSubtraction
				System.out.println("Returning to main menu... (subtraction)");
				runMainMenu();
			case "2" :
				//runSubtraction
				System.out.println("Returning to main menu... (subtraction)");
				runMainMenu();
				
			case "multiplication" :
				//runMultiplication
				System.out.println("Reuturning to main menu...(multiplication)");
				runMainMenu();
			case "3" :
				//runMuiltiplication
				System.out.println("Reuturning to main menu...(multiplication)");
				runMainMenu();
			
			case "division" :
				//runDivision
				System.out.println("Returning to main menu...(division)");
				runMainMenu();
			case "4" :
				//runDivision
				System.out.println("Returning to main menu...(division)");
				runMainMenu();
			
			case "main menu" :
				//Returns to the main menu
				System.out.println("Returning to main menu...");
				runMainMenu();
			case "5" :
				//Returns to the main menu
				 System.out.println("Returning to main menu...");
				 runMainMenu();
		}
	}
	
	public static void runAdditionMenu() {
		
		String [] menu_options = new String[8];
		String user_input = "";
		
		System.out.println("Welcome to the addition training menu. How would you like to proceed?"
				+ "\n1 - Stage one"
				+ "\n2 - Stage two"
				+ "\n3 - Stage three"
				+ "\n4 - Main menu");
		runInputLoop(menu_options);
		
		switch (user_input) {
		
			case "stage one" :
				//runAdditionStageOne
				System.out.println("Returning to main menu...(addition stage one)");
				runMainMenu();
